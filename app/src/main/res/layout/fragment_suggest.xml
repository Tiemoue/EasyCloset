<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuggestFragment">


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:text="@string/date_added"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <View

        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_alignStart="@+id/tvDate"
        android:layout_alignTop="@+id/tvDate"
        android:layout_alignEnd="@+id/tvDate"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_marginStart="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="-15dp"
        android:layout_marginBottom="-12dp"
        android:background="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="125dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWeatherTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/msg"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/dayState"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/weather_cloudy_icon" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/baseLayer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp" />


        <ImageView
            android:id="@+id/outerLayer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/middleLayer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp" />


        <ImageView
            android:id="@+id/shoes"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp" />

    </LinearLayout>

</RelativeLayout>